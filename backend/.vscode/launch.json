{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "poetry-install",
      "type": "shell",
      "command": "poetry install",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ],
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Poetry: Launch FastAPI",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "preLaunchTask": "poetry-install"
    }
  ]
}